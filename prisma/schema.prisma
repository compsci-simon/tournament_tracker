// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider        = "prisma-client-js"
    previewFeatures = ["jsonProtocol"]
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model User {
    id          String       @id @default(cuid())
    email       String       @unique
    createdAt   DateTime     @default(now())
    firstName   String
    lastName    String
    password    String       @default("866091acb5ff40f25f6d72b9ed3152c7dfb7fb605d5f39b4dec2a2e9f3e99202")
    nickName    String?
    tournaments Tournament[]
    games       Game[]
    ratings     Rating[]
    trophies    Trophy[]
}

model Trophy {
    id      String @id @default(cuid())
    holder  User   @relation(fields: [userId], references: [id])
    userId  String
    content String
}

model Rating {
    id     String   @id @default(cuid())
    time   DateTime @default(now())
    rating Int
    player User     @relation(fields: [userId], references: [id], onDelete: Cascade)
    userId String
    game   Game?    @relation(fields: [gameId], references: [id], onDelete: Cascade)
    gameId String?
}

model Game {
    id            String      @id @default(cuid())
    time          DateTime    @default(now())
    round         Int?
    Tournament    Tournament? @relation(fields: [tournamentId], references: [id], onDelete: Cascade)
    tournamentId  String?
    players       User[]
    player1Points Int         @default(0)
    player2Points Int         @default(0)
    ratings       Rating[]
}

model Tournament {
    id             String   @id @default(cuid())
    createdAt      DateTime @default(now())
    startDate      DateTime
    roundInterval  String
    emailReminders Boolean
    numRounds      Int
    name           String
    players        User[]
    games          Game[]
}
